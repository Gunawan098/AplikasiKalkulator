<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="65dp"
        android:layout_y="37dp"
        android:text="MASUKKAN DUA ANGKA"
        android:textSize="23dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_pertama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="112dp"
        android:hint="Masukkan Angka Pertama"/>

    <EditText
        android:id="@+id/input_kedua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="160dp"
        android:hint="Masukkan Angka Kedua"/>

    <Button
        android:id="@+id/btn_tambah"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_x="12dp"
        android:layout_y="222dp"
        android:onClick="tambah"
        android:text="+"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_kurang"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_x="103dp"
        android:layout_y="222dp"
        android:onClick="kurang"
        android:text="-"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_kali"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_x="226dp"
        android:layout_y="222dp"
        android:onClick="kali"
        android:text="*"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_bagi"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_x="320dp"
        android:layout_y="222dp"
        android:onClick="bagi"
        android:text="/"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_bersihkan"
        android:layout_width="377dp"
        android:layout_height="wrap_content"
        android:layout_x="14dp"
        android:layout_y="282dp"
        android:onClick="bersihkan"
        android:text="Bersihkan"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="176dp"
        android:layout_y="367dp"
        android:text="HASIL"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/view_hasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="178dp"
        android:layout_y="409dp"
        android:text=""
        android:textSize="20dp" />

</AbsoluteLayout>